# Corepack (for Vercel deployment with pnpm@10.x)
package-manager-strict=true

# Enable hoisting for better compatibility
hoist=true

# Strict peer dependencies
strict-peer-dependencies=false

# Approved build scripts for required dependencies
enable-pre-post-scripts=true

# Auto-install peers
auto-install-peers=true

# Shamefully hoist for Next.js compatibility
shamefully-hoist=true

# Node linker (hoisted is more compatible with Next.js)
node-linker=hoisted

# Performance
prefer-frozen-lockfile=true
